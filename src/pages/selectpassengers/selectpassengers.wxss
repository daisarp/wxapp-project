.borderBo {
  position: relative;
}

.borderBo:before {
  content: '';
  width: 200%;
  height: 0;
  position: absolute;
  left: 0;
  bottom: 0;
  border-bottom: 1px solid #cbcbcc;
  transform: scale(0.5);
  transform-origin: 0 0;
}

