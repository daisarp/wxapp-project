page {
  height: 100%;
}

.container {
  height: 100%;
  font-size: 32rpx;
  padding-top: 84rpx;
}

.nav {
  display: -ms-flexbox;
  display: flex;
  height: 80rpx;
  width: 100%;
  border-bottom: 1px solid #C7C7C9;
  background-color: #fafafa;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1002;
}

.nav view {
  -ms-flex: 1;
      flex: 1;
  text-align: center;
  height: 79rpx;
  line-height: 79rpx;
  color: #4A586A;
}

.nav view.active {
  color: #59A5F0;
  border-bottom: 2px solid #59A5F0;
}

.wrapCity {
  height: 100%;
}

.wrapCity swiper {
  height: 100%;
  width: 100%;
}

.wrapCity swiper scroll-view {
  height: 100%;
}

.wrapCity swiper scroll-view .cityList view {
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: column;
      flex-direction: column;
  padding-left: 1.067rem;
  height: 2.667rem;
  line-height: 2.667rem;
  text-align: left;
  border-bottom: 1px solid #eee;
}

.wrapCity swiper scroll-view .cityList .letterList {
  background: #F0EFF5;
  margin-left: -0.267rem;
  height: 2.2rem;
  line-height: 2.2rem;
}

.toolBar {
  position: fixed;
  z-index: 1001;
  right: 0;
  top: 2.2rem;
  width: 1.6rem;
  height: 100%;
  background: rgba(255, 255, 255, 0.5);
  color: #59A5F0;
  font-size: 24rpx;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: column;
      flex-direction: column;
}

.toolBar scroll-view {
  height: 90%;
}

.toolBar scroll-view view {
  text-align: center;
  width: 100%;
  height: 1.1rem;
}

.toolBar scroll-view view:first-child {
  padding-top: 0.3rem;
}