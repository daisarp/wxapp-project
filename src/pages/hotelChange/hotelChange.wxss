.top {
  width: 100%;
  height: 2.666667rem;
  background-color: #fff;
  font-size: 0;
}

.top text {
  display: inline-block;
  width: 4.266667rem;
  font-size: 30rpx;
  line-height: 2.666667rem;
  text-align: center;
}

.top .info {
  display: inline-block;
  color: #343434;
  width: 15.706667rem;
  font-size: 30rpx;
  line-height: 2.666667rem;
}

.top .info .left,
.top .info .right {
  display: inline-block;
  font-size: 26rpx;
  line-height: 2.666667rem;
  color: #9e9e9e;
}

.main {
  width: 100%;
  background-color: #58a4ef;
  padding-bottom: 0.16rem;
}

.main .hotelInfo {
  width: 100%;
  padding-top: 0.293333rem;
  position: relative;
}

.main .hotelInfo .rightIcon {
  display: block;
  width: 100%;
  position: relative;
}

.main .hotelInfo .relativeIcon {
  width: 1.733333rem;
  height: 1.76rem;
  background-size: 100%;
  position: absolute;
  top: 0;
  right: 0;
}

.main .hotelInfo .hotelName {
  width: 100%;
  position: absolute;
  bottom: 1.866667rem;
  left: 0;
  height: 2.506667rem;
  line-height: 2.506667rem;
  color: white;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.5);
  text-indent: 1em;
}

.main .hotelInfo .messageDetail {
  width: 100%;
  height: 1.866667rem;
  background-color: #fff;
  padding: 0 1.253333rem 0 0.986667rem;
  box-sizing: border-box;
  font-size: 0;
}

.main .hotelInfo .messageDetail .leftMap {
  width: 13.333333rem;
  height: 1.866667rem;
  line-height: 1.866667rem;
  display: inline-block;
  position: relative;
}

.main .hotelInfo .messageDetail .leftMap .mapIcon {
  position: absolute;
  width: 0.8rem;
  height: 0.933333rem;
  top: 0.4rem;
  left: 0;
}

.main .hotelInfo .messageDetail .leftMap text {
  padding-left: 1.066667rem;
  box-sizing: border-box;
  display: block;
  font-size: 26rpx;
  line-height: 1.866667rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.main .hotelInfo .messageDetail .Priceright {
  display: inline-block;
  height: 1.866667rem;
  width: 4.4rem;
  position: relative;
  top: -0.533333rem;
  right: 0;
}

.main .hotelInfo .messageDetail .Priceright .add {
  display: block;
  font-size: 34rpx;
  height: 1.866667rem;
  line-height: 1.866667rem;
  color: #ff7f00;
}

.main .hotelInfo .messageDetail .Priceright .reduce {
  display: block;
  font-size: 34rpx;
  height: 1.866667rem;
  line-height: 1.866667rem;
  color: #58a4ef;
}