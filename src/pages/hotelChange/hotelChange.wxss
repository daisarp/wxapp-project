page {
  height: 100%;
  background: #F4F4F4;
}

.top {
  width: 100%;
  height: 2.133333rem;
  line-height: 2.133333rem;
  background-color: #fff;
  display: -ms-flexbox;
  display: flex;
}

.top text {
  width: 4.266667rem;
  font-size: 30rpx;
  text-align: center;
}

.top .info {
  color: #343434;
  width: 15.706667rem;
  font-size: 30rpx;
}

.top .info .left,
.top .info .right {
  font-size: 26rpx;
  color: #9e9e9e;
  margin-left: 0.133333rem;
}

.top .info .left {
  margin-right: 0.133333rem;
}

.main {
  width: 100%;
  margin-top: 0.266667rem;
}

.main .hotelInfo {
  width: 100%;
  margin-bottom: 0.266667rem;
}

.main .hotelInfo .hotelTop {
  width: 100%;
  position: relative;
}

.main .hotelInfo .rightIcon {
  display: block;
  width: 100%;
  height: 9.493333rem;
}

.main .hotelInfo .relativeIcon {
  width: 1.733333rem;
  height: 1.76rem;
  background-size: 100%;
  position: absolute;
  top: 0;
  right: 0;
}

.main .hotelInfo .hotelName {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2.133333rem;
  line-height: 2.133333rem;
  color: white;
  font-size: 32rpx;
  background-color: rgba(0, 0, 0, 0.5);
  padding-left: 0.986667rem;
  box-sizing: border-box;
}

.main .hotelInfo .messageDetail {
  width: 100%;
  height: 1.866667rem;
  background-color: #fff;
  padding: 0 1.253333rem 0 0.986667rem;
  box-sizing: border-box;
  display: -ms-flexbox;
  display: flex;
  -ms-flex-direction: row;
      flex-direction: row;
  -ms-flex-align: center;
      align-items: center;
  -ms-flex-pack: justify;
      justify-content: space-between;
}

.main .hotelInfo .messageDetail .leftMap {
  width: 13.333333rem;
  height: 1.866667rem;
  line-height: 1.866667rem;
  position: relative;
}

.main .hotelInfo .messageDetail .leftMap .mapIcon {
  position: absolute;
  width: 0.8rem;
  height: 0.933333rem;
  top: 0.4rem;
  left: 0;
}

.main .hotelInfo .messageDetail .leftMap text {
  padding-left: 1.066667rem;
  box-sizing: border-box;
  display: block;
  font-size: 26rpx;
  line-height: 1.866667rem;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.main .hotelInfo .messageDetail .Priceright {
  height: 1.866667rem;
  width: 4.4rem;
  text-align: right;
}

.main .hotelInfo .messageDetail .Priceright .add {
  display: block;
  font-size: 34rpx;
  height: 1.866667rem;
  line-height: 1.866667rem;
  color: #ff7f00;
}

.main .hotelInfo .messageDetail .Priceright .reduce {
  display: block;
  font-size: 34rpx;
  height: 1.866667rem;
  line-height: 1.866667rem;
  color: #58a4ef;
}